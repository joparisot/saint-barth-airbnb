<%= simple_form_for :villa, :url => url_for(:action => 'index', :controller => 'villas'), :method => 'get' do |f| %>
  <%= f.input :start_date, as: :string, input_html:{class: "datepicker"} %>
  <%= f.input :end_date, as: :string, input_html:{class: "datepicker"} %>
  <%= f.submit 'EXPLORE', class: "btn btn-medium" %>
<% end %>
