<div class="wrapper text-center home-wrapper">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(51,51,51,0.3) 0%, rgba(13,11,13,0.3) 50%), url(<%= image_path "Background.jpg" %>);">
    <div class="banner-content">
      <h1>Luxury Vacation</h1>
      <p>The most amazing vacation of your life awaits</p>
      <%= render 'home_form' %>
    </div>
  </div>
</div>

<div class="wrapper-gold text-center">
  <div class="title">Popular destinations</div>
  <div class="row">
    <% @villas.each do |villa| %>
      <div class="col-xs-12 col-sm-6 col-md-6" id="padded">
        <div class="card-wrapper">
          <%= link_to villa_path(villa) do %>

            <% if villa.photo? %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                 url('<%= cl_image_path villa.photo.path, height: 300, width: 400, crop: :fill %>')">
                   <div class="card-hover">
                  <h2>check it out!</h2>
                  <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Repellat temporibus optio alias quia officiis eos perspiciatis cumque ducimus consequatur exercitationem. Quo velit esse laborum sint libero, voluptatibus sed necessitatibus dolor?</p>
                </div>
              </div>
            <% else %>
              <div class="card" style="background-image:
               url('http://pinandpin.com/wp-content/uploads/2013/11/395_2CL_2175_VILLA_IVY_x-1200x798.jpg')">
                 <div class="card-hover">
                  <h2>check it out!</h2>
                  <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Repellat temporibus optio alias quia officiis eos perspiciatis cumque ducimus consequatur exercitationem. Quo velit esse laborum sint libero, voluptatibus sed necessitatibus dolor?</p>
                </div>
              </div>
            <% end %>

              <div class="card-description">
                <div class="villa-name">
                  <i class="fa fa-home" aria-hidden="true"></i>
                  <%= villa.name %>
                </div>
                <div class="villa-location">
                  <i class="fa fa-map-marker" aria-hidden="true"></i>
                  <%= villa.address %>
                </div>
                <div class="villa-price">
                  <i class="fa fa-money" aria-hidden="true"></i>
                  <%= villa.price.to_i %>â‚¬/night
                </div>
              </div>

          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
