<%= simple_form_for [@villa] do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :price, input_html: { min: 0, step: "any"}%>
  <%= f.input :category %>
  <%= f.input :number_of_guests %>
  <%= f.input :number_of_rooms %>
  <%= f.input :number_of_bathrooms %>
  <%= f.input :number_of_beds %>
  <%= f.input :pool %>
  <%= f.input :jacuzzi %>
  <%= f.input :heated_pool %>
  <%= f.input :wifi %>
  <%= f.input :parking %>
  <%= f.input :smoking_allowed %>
  <%= f.input :images, as: :attachinary %>

  <%= f.submit "Submit", class: "form-btn btn btn-primary" %>
<% end %>
