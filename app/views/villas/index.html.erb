<%= link_to "Add a villa", new_villa_path %>

<% @villa.each do |villa| %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="card-wrapper">
        <%= link_to villa_path(villa) do %>

          <% if villa.photo? %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
               url('<%= cl_image_path villa.photo.path, height: 300, width: 400, crop: :fill %>')">
          <% else %>
            <div class="card" style="background-image:
             url('http://pinandpin.com/wp-content/uploads/2013/11/395_2CL_2175_VILLA_IVY_x-1200x798.jpg')">
          <% end %>
            <div class="card-hover">
              <h2>check it out!</h2>
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Repellat temporibus optio alias quia officiis eos perspiciatis cumque ducimus consequatur exercitationem. Quo velit esse laborum sint libero, voluptatibus sed necessitatibus dolor?</p>
            </div>
          </div>

          <div class="card-description">
            <div class="villa-name">
              <i class="fa fa-home" aria-hidden="true"></i>
              <%= villa.name %>
            </div>
            <div class="villa-location">
              <i class="fa fa-map-marker" aria-hidden="true"></i>
              <%= villa.address %>
            </div>
            <div class="villa-price">
              <i class="fa fa-money" aria-hidden="true"></i>
              <%= villa.price.to_i %>â‚¬/night
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
<% end %>
