<div class="container">
  <% @villa.each do |villa| %>
    <div class="row">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @villa.photos.first, height: 300, width: 400, crop: :fill %>')">>
        <div class="col-xs-6">
          <div class="card-category">
            <% villa.price %>
          </div>
          <div class="card-description">
            <h2>
              <% villa.name %>
            </h2>
            <p>
              <% villa.number_of_guests %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%  %>
